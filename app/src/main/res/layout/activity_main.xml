<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/add_fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_fragment1_text"/>
    <Button
        android:id="@+id/add_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_fragment2_text"/>
    <Button
        android:id="@+id/remove_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_fragment2_text"/>
    <Button
        android:id="@+id/replace_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/replace_fragment2_text"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>
